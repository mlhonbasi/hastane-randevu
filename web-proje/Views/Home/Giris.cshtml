                        <div class="form-group">
                            <label asp-for="KullaniciParola" class="control-label"></label>
                            <input asp-for="KullaniciParola" class="form-control"></>
                            <span asp-validation-for="KullaniciParola" class="text-danger"></span>
                        </div>
                        <div>
                            <input type="submit" value="Kimliği Doğrula" class="btn btn-primary" />
