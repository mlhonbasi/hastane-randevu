@model IEnumerable<web_proje.Models.Doktor>

@{
    ViewData["Title"] = "Index";
}

@if (@User.IsInRole("admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DoktorAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoktorSoyadi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnaBilimDali)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Polikinlik)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DoktorAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoktorSoyadi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnaBilimDali)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Polikinlik.PolikinlikAdi)
            </td>
                @if (User.IsInRole("admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.DoktorId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.DoktorId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.DoktorId">Delete</a>
                    </td>
                }               
        </tr>
}
    </tbody>
</table>
